void menu4(){
	int diubah;

	system("cls");
	printf(" ----------------------------------------\n");
	printf(" ========= MENU 4 - Update Data =========\n");
	printf(" ----------------------------------------\n\n");
	printf(" Silakan masukkan angka yang akan diubah : ");
