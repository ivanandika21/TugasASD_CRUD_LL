}

void menu5(){
	printf("\n Byebye!\n ");
	printf("Ivan Andika Surya, 2021\n");
	exit(EXIT_SUCCESS);
}

//====================================================================================== ALGORITMA =======
void inserthead(int angka){
    node = (struct data *)malloc(sizeof(struct data));
    node->nilai = angka;

    if(head==NULL){
        head = node;
        current = node;
    }else{
        node->next = head;
        head = node;
    }
    current->next = NULL;
}

void inserttail(int angka){
	node = (struct data *)malloc(sizeof(struct data));
    node->nilai = angka;

    if(head==NULL){
        head = node;
        current = node;
    }else{
        current->next = node;
        current = node;
    }
    current->next = NULL;
}

void main(){
	menu_utama();
}
