//==================================================================================== NILAI ======

void deletenilai() {
	int i, angka;
	struct data *node, *temp;
	if (start == NULL) {
		printf("\n ERROR: Memory tidak cukup!\n");
	} else {
		printf("\n Pilih isi data yang akan dihapus : ");
		scanf("%i", & angka);
		if (angka == start->nilai) {
			temp = start;
			start = start->next;
			printf("\n\n Data yang dihapus adalah : %i\n", temp->nilai);
			free(temp);
		} else {
			temp = start;
			for (i = 1; i < 9999; i++) {
				node = temp;
				temp = temp->next;
				if (angka == temp->nilai) {
					goto keluar;
				}
				if (temp->next == NULL) {
					printf("\n Maaf, anda memasukkan nilai yang salah.\n ");
					system("pause");
					menu_utama();
				}
			}
			keluar:
				node->next = temp->next;
			printf("\n Data yang dihapus adalah : %i\n", temp->nilai);
			free(temp);
		}
	}
}

void updatenilai() {
	struct data *temp, *node, *tempangka;
	int i, angka;
	node = (struct data *) malloc(sizeof(struct data));
	//preventerror

	printf("\n Pilih isi data yang akan diupdate : ");
	scanf("%i", & angka);
	printf("\n Masukkan data yang akan diinput : ");
	scanf("%i", & node->nilai);
	tempangka = node->nilai;
	node->next = NULL;
	if (angka == start->nilai) {
		node->next = start;
		start = node;
		temp = start;
		for (i = 0; i < 9999; i++) {
			node = temp;
			temp = temp->next;
			if (angka == temp->nilai) {
				goto keluarstart;
			}
		}
		keluarstart:
			node->next = temp->next;
		printf("\n Data yang diupdate adalah %i menjadi %i\n", temp->nilai, start->nilai);
		free(temp);
	} else {
		if (angka == start->nilai) {
			node->next = start;
			start = node;
		} else {
			for (i = 1, temp = start; i < 9999; i++) {
				temp = temp->next;
				if (angka == temp->nilai) {
					goto keluarinsert;
				}
				if (temp->next == NULL) {
					printf("\n Maaf, anda memasukkan posisi yang salah.\n ");
					system("pause");
					menu_utama();
				}
			}
			keluarinsert:
				node->next = temp->next;
			temp->next = node;
		}
		temp = start;
		for (i = 1; i < 9999; i++) {
			node = temp;
			temp = temp->next;
			if (angka == temp->nilai) {
				goto keluarhapus;
			}
			if (temp->next == NULL) {
				printf("\n Maaf, anda memasukkan nilai yang salah.\n ");
				system("pause");
				menu_utama();
			}
		}
		keluarhapus:
			node->next = temp->next;
		printf("\n Data yang diupdate adalah %i menjadi %i\n", temp->nilai, tempangka);
		free(temp);

	}
}

//==================================================================================== POSISI ======

void insertposisi() {
	struct data *temp, *node;
	int i, pos;
	node = (struct data *) malloc(sizeof(struct data));
	//preventerror

	printf("\n Pilih nomor data yang akan diisi : ");
	scanf("%i", & pos);
	printf("\n Masukkan data yang akan diinput : ");
	scanf("%i", & node->nilai);

	node->next = NULL;
	if (pos == 1) {
		node->next = start;
		start = node;
	} else {
		for (i = 1, temp = start; i < pos - 1; i++) {
			temp = temp->next;
			if (temp == NULL) {
				printf("\n Maaf, anda memasukkan posisi yang salah.\n ");
				system("pause");
				menu_utama();
			}
		}
		node->next = temp->next;
		temp->next = node;
	}
}

void deleteposisi() {
	int i, pos;
	struct data *node, *temp;
	if (start == NULL) {
		printf("\n ERROR: Memory tidak cukup!\n");
	} else {
		printf("\n Pilih nomor data yang akan dihapus : ");
		scanf("%i", & pos);
		if (pos == 1) {
			temp = start;
			start = start->next;
			printf("\n\n Data yang dihapus adalah : %i\n", temp->nilai);
			free(temp);
		} else {
			temp = start;
			for (i = 1; i < pos; i++) {
				node = temp;
				temp = temp->next;
				if (temp == NULL) {
					printf("\n Maaf, anda memasukkan posisi yang salah.\n ");
					system("pause");
					menu_utama();
				}
			}
			node->next = temp->next;
			printf("\n Data yang dihapus adalah : %i\n", temp->nilai);
			free(temp);
		}
	}
}

void updateposisi() {
	struct data *temp, *node;
	int i, pos;
	node = (struct data *) malloc(sizeof(struct data));
	//preventerror

	printf("\n Pilih nomor data yang akan diupdate : ");
	scanf("%i", & pos);
	printf("\n Masukkan data yang akan diinput : ");
	scanf("%i", & node->nilai);

	node->next = NULL;
	if (pos == 1) {
		node->next = start;
		start = node;
		temp = start;
		for (i = 0; i < pos; i++) {
			node = temp;
			temp = temp->next;
		}
		node->next = temp->next;
		printf("\n Data yang diupdate adalah %i menjadi %i\n", temp->nilai, start->nilai);
		free(temp);
	} else {
		for (i = 1, temp = start; i < pos - 1; i++) {
			temp = temp->next;
			if (temp == NULL) {
				printf("\n Maaf, anda memasukkan posisi yang salah.\n ");
				system("pause");
				menu_utama();
			}
		}
		node->next = temp->next;
		temp->next = node;
		temp = start;
		for (i = 0; i < pos; i++) {
			node = temp;
			temp = temp->next;
		}
		node->next = temp->next;
		printf("\n Data yang diupdate adalah %i menjadi %i\n", temp->nilai, node->nilai);
		free(temp);
	}
}

void main() {
	menu_utama();
}
