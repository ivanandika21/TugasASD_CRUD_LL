//=================================================== INISIALISASI STRUCT ====
struct data {
	int id;
	int nim;
	char nama[200];
	int umur;
	char alamat[200];
	char prodi[200];
	
	struct data *next;
};
struct data *start = NULL;

int id_awal = 1000;
//============================================================ MENU UTAMA ====
int menu_utama() {
	char pilih;

	while (1) {
		system("cls");
		printf(" ---------------------------------------------------------------------------\n");
		printf(" ================================ MENU UTAMA ===============================\n");
		printf(" ---------------------------------------------------------------------------\n");
		printf(" 1. Read Data\n");
		printf(" 2. Insert Data\n");
		printf(" 3. Delete Data\n");
		printf(" 4. Update Data\n");
		printf(" 5. Sorting Data\n");
		printf(" 6. Search Data\n");
		printf(" 7. Keluar\n");
		printf(" ---------------------------------------------------------------------------\n");
		printf(" Silakan masukkan pilihan anda : ");
		scanf("%s", &pilih);
		switch (pilih) {
			case '1': {
				menu1();
				printf(" ");
				system("pause");
				menu_utama();
			}
			case '2': {
				menu2();
				printf(" ");
				system("pause");
